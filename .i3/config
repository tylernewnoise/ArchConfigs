# Switching between workspaces
bindsym $mod+n workspace prev
bindsym $mod+m workspace next
# reload the configuration file
bindsym $mod+Ctrl+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Ctrl+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym odiaeresis resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        id bar-0
        position top
        status_command i3blocks -c ~/.i3/i3blocks/i3blocks.conf
        output DVI-I-1
        tray_output none
}

bar {
        id bar-1
        position top
        status_command i3blocks -c ~/.i3/i3blocks/i3blocks2.conf
        tray_output DVI-D-0
        output DVI-D-0
}

# Move workspaces to monitors
bindsym $mod+p move workspace to output right
bindsym $mod+o move workspace to output left

# Volume keys - alsa only
#bindsym XF86AudioMute exec amixer set Front mute
#bindsym XF86AudioLowerVolume exec amixer set Master 1 2- unmute
#bindsym XF86AudioRaiseVolume exec amixer set Master 1 2+ unmute
# Volume keys - pulseaudio
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle && volnoti-show -m
bindsym XF86AudioRaiseVolume exec ~/.i3/volnoti.sh up
bindsym XF86AudioLowerVolume exec ~/.i3/volnoti.sh down

# Autostart
exec nitrogen --restore &
exec unclutter -b --timeout 3
exec vidalia &
exec osmo &
exec volnoti &
# Numlocktaste einschalten
exec numlockx on &
# Kein schwarzer Bildschirm nach x-Zeit
exec xset -dpms &
exec xset s off &
# Tastaturlayout auf dt. stellen (Problem liegt wohl bei LXDM)
exec setxkbmap -layout de &
# Scroll-Lock zum Leuchten bringen
exec xmodmap -e 'add mod3 = Scroll_Lock' &

# Lock X, exit X, suspend, reboot, shutdown
set $Locker i3lock -t -i ~/.config/wallpaper/ch.png && sleep 1

set $mode_system System (l) lock, (e) logout, (r) reboot, (q) shutdown, (s) suspend
mode "$mode_system" {
        bindsym l exec --no-startup-id $Locker, mode "default"
        bindsym e exec --no-startup-id i3-msg exit, mode "default"
        bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
        bindsym r exec --no-startup-id systemctl reboot, mode "default"
        bindsym q exec --no-startup-id systemctl poweroff -i, mode "default"
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"

