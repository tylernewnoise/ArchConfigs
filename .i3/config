# i3 config file (v4) Thinkpad Version
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font pango:DejaVu Sans Mono 10
font xft:Noto Sans 10

# Layout colors           bord      bg    text
client.focused #007fbf #007fbf #ffffff
client.unfocused #666666 #666666 #ffffff
client.urgent #aa0000 #990000 #ffffff

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id termite
bindsym $mod+Ctrl+Return exec --no-startup-id st

# start a filemanager
bindsym $mod+Ctrl+f exec termite -e ranger

# take screenshot
bindsym $mod+Ctrl+p exec scrot '%F--%I:%M:%S:%p--$wx$h--scrot.png' -e 'mv $f ~/Tmp'

# start glances
bindsym $mod+Ctrl+Delete exec termite -e glances

bindsym $mod+Alt+c exec --no-startup-id ~/.skripts/allcoms

# no titlebar
new_window pixel 2

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $mod+d exec --no-startup-id j4-dmenu-desktop --dmenu="dmenu -i -l 20"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Ctrl+h move left
bindsym $mod+Ctrl+j move down
bindsym $mod+Ctrl+k move up
bindsym $mod+Ctrl+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Ctrl+Left move left
bindsym $mod+Ctrl+Down move down
bindsym $mod+Ctrl+Up move up
bindsym $mod+Ctrl+Right move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen
bindsym $mod+Shift+f fullscreen toggle global

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Ctrl+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+c focus child

# variable for workspaces
# set $wsp1 1:
set $wsp1 1:
set $wsp2 2:
set $wsp3 3:
set $wsp4 4:
set $wsp5 5:
set $wsp6 6:
set $wsp7 7:
set $wsp8 8:
set $wsp9 9:
set $wsp10 10:
set $wsp11 11:
set $wsp12 12:
set $wsp13 13:

# put workspaces on the second monitor
workspace $wsp1 output DP1-1
workspace $wsp2 output DP1-1
workspace $wsp3 output DP1-1
workspace $wsp7 output DP1-2
workspace $wsp8 output DP1-2
workspace $wsp9 output DP1-2
workspace $wsp10 output DP1-2
workspace $wsp11 output DP1-2
workspace $wsp12 output DP1-2
workspace $wsp13 output DP1-2

# switch to workspace
bindsym $mod+1 workspace $wsp1
bindsym $mod+2 workspace $wsp2
bindsym $mod+3 workspace $wsp3
bindsym $mod+4 workspace $wsp4
bindsym $mod+5 workspace $wsp5
bindsym $mod+6 workspace $wsp6
bindsym $mod+7 workspace $wsp7
bindsym $mod+8 workspace $wsp8
bindsym $mod+9 workspace $wsp9
bindsym $mod+0 workspace $wsp10
#100 workspaces
bindsym $mod+y exec i3-input -F 'workspace %s' -l2 -P 'Goto: '

# move focused container to workspace
bindsym $mod+Ctrl+1 move container to workspace $wsp1
bindsym $mod+Ctrl+2 move container to workspace $wsp2
bindsym $mod+Ctrl+3 move container to workspace $wsp3
bindsym $mod+Ctrl+4 move container to workspace $wsp4
bindsym $mod+Ctrl+5 move container to workspace $wsp5
bindsym $mod+Ctrl+6 move container to workspace $wsp6
bindsym $mod+Ctrl+7 move container to workspace $wsp7
bindsym $mod+Ctrl+8 move container to workspace $wsp8
bindsym $mod+Ctrl+9 move container to workspace $wsp9
bindsym $mod+Ctrl+0 move container to workspace $wsp10

# Modifications:
# assign programm to a specific workspace
assign [class="Pidgin"] $wsp10
assign [class="ricochet"] $wsp10
assign [class="Signal"] $wsp10
assign [class="Slack"] $wsp11
assign [class="Thunderbird"] $wsp9
for_window [class="Seafile Client"] move to workspace $wsp13
for_window [class="Spotify"] move to workspace $wsp12
for_window [class="Deadbeef"] move to workspace $wsp12
for_window [class="Galculator"] floating enable, border normal
for_window [title="JetBrains Toolbox"] floating enable, border normal
for_window [class="^jetbrains-.+"][window_type=dialog] focus
for_window [class="Vulkan"] floating enable, border normal

# reload the configuration file
bindsym $mod+Ctrl+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Ctrl+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

bar {
    id bar-0
    position top
    status_command i3blocks -c ~/.i3/i3blocks/i3blocks.conf
    output DP1-1
}

bar {
    id bar-1
    position top
    status_command i3blocks -c ~/.i3/i3blocks/i3blocks2.conf
    output DP1-2
    tray_output none
}

bar {
    id bar-2
    position top
    status_command i3blocks -c ~/.i3/i3blocks/i3blocks.conf
    output eDP1
}

# Switching between workspaces
bindsym $mod+m workspace next
bindsym $mod+n workspace prev

# Move workspaces to monitors
bindsym $mod+p move workspace to output right
bindsym $mod+o move workspace to output left

# Volume keys
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.i3/volume low
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.i3/volume high
bindsym XF86AudioMute exec --no-startup-id ~/.i3/volume mute

# Backlight keys
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

set $Locker i3lock -i /home/tyler/.config/wallpaper/cat.png && sleep 1

# Lock X
bindsym XF86Display exec i3lock -i /home/tyler/.config/wallpaper/cat.png && sleep 1

set $mode_system System (l) lock, (e) logout, (r) reboot, (q) shutdown, (s) suspend
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym q exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Print mode "$mode_system"

# Autostart
exec --no-startup-id udiskie -Ns &
exec --no-startup-id unclutter -b --timeout 3 &
# exec jetbrains-toolbox --minimize &
exec --no-startup-id nm-applet &
# exec --no-startup-id osmo &
exec --no-startup-id dunst &
exec --no-startup-id xset -b &
exec --no-startup-id xbacklight -set 40 & # set backlight
exec --no-startup-id numlockx on & # turn on numlock key
exec --no-startup-id autorandr --change &
exec --no-startup-id sleep 2 && nitrogen --restore &
exec --no-startup-id ~/.skripts/disableTouchpad &
